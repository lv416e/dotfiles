#
# Bootstrap file for Zsh - sets ZDOTDIR for XDG compliance
#
# This minimal file must remain in $HOME to set ZDOTDIR.
# All other zsh configuration is in $ZDOTDIR (~/.config/zsh)
#

# Set ZDOTDIR to XDG-compliant location
export ZDOTDIR="${XDG_CONFIG_HOME:-{{ .chezmoi.homeDir }}/.config}/zsh"

# Source the actual .zshenv from ZDOTDIR
[[ -f "$ZDOTDIR/.zshenv" ]] && source "$ZDOTDIR/.zshenv"
