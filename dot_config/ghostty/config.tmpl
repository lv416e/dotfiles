# Ghostty configuration
# https://ghostty.org/docs/config

# ====================== FONT ======================
# Nerd Font options (requires Nerd Font to be installed):
# - HackGen35 Console NF (current in kitty)
# - JetBrains Mono Nerd Font
# - Fira Code Nerd Font
# - Hack Nerd Font
font-family = HackGen35 Console NF Regular
font-size = 10.5

# Font rendering improvements for better appearance (macOS)
font-thicken = true

# ====================== CURSOR ======================
cursor-style = block

# ====================== WINDOW ======================
window-padding-x = 8
window-padding-y = 8
window-padding-balance = true

# Background opacity
background-opacity = 0.8

# Window size
window-width = 200
window-height = 50

# ====================== SHELL ======================
# Auto-start multiplexer based on .chezmoi.toml.tmpl configuration
# Switch with: switch-multiplexer tmux|zellij
shell-integration = zsh
shell-integration-features = cursor,sudo,title
{{- if eq .zsh.multiplexer "zellij" }}
command = /bin/zsh --login -c "/opt/homebrew/bin/zellij attach -c"
{{- else }}
{{-   if eq .chezmoi.arch "arm64" }}
command = /bin/zsh --login -c "/opt/homebrew/bin/tmux a -t 0 || /opt/homebrew/bin/tmux -u"
{{-   else }}
command = /bin/zsh --login -c "/usr/local/bin/tmux a -t 0 || /usr/local/bin/tmux -u"
{{-   end }}
{{- end }}

# ====================== COLORS ======================
# GitHub Dark theme (matching Alacritty and Kitty)
theme = GitHub Dark Default

# High contrast setting
minimum-contrast = 4.0

# ====================== MACOS SPECIFIC ======================
macos-option-as-alt = false
quit-after-last-window-closed = true
window-decoration = false

# ====================== MOUSE ======================
copy-on-select = true

# ====================== CLIPBOARD ======================
# Allow clipboard access for image pasting
clipboard-read = allow
clipboard-write = allow

# ====================== SCROLLBACK ======================
scrollback-limit = 100000

# ====================== PERFORMANCE ======================
# Ghostty is optimized by default, minimal config needed

# ====================== KEYBOARD SHORTCUTS ======================
# Ghostty uses different keybinding syntax
# Most shortcuts work out of the box
# Default keybindings are already good, no custom ones needed
