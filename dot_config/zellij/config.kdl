// =============================================================================
// Behavior
// =============================================================================
// Automatically attach to existing session or create new one
default_mode "normal"

// Copy to clipboard
copy_command "pbcopy"  // macOS clipboard

// Scroll buffer size (number of lines)
scroll_buffer_size 10000

// Mouse mode
mouse_mode true

